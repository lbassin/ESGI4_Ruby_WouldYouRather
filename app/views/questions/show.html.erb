<h2>Question : </h2>
<h3><%= @question.label %></h3>

<h2>Résultats</h2>
<table border="1">
  <% if @question.responses.any? %>
    <% @question.responses.each do |response| %>
      <tr>
        <td><%= response.label %></td>
        <td><%= @question.votes.where(response: response.id).count %></td>
      </tr>
    <% end %>
  <% end %>
  <tr>
    <td>Total</td>
    <td><%= @question.votes.count %></td>
  </tr>
</table>

<%= link_to 'Supprimer', @question, method: :delete,
            data: {confirm: 'Êtes-vous sûr(e) de vouloir supprimer cette question ?'} %>
<%= link_to 'Retour', questions_path %>
