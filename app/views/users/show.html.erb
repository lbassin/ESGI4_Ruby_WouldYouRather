<p id="notice"><%= notice %></p>
<% content_for :body_class, "questions" %>

<h1><%= @user.username %></h1>
<div class="actions">
  <%= link_to 'Retour', users_path, class: "action-default" %>
  <%= link_to 'Supprimer', @user, method: :delete, class: "action-delete-question",
              data: {confirm: 'Êtes-vous sûr(e) de vouloir supprimer cette question ?'} %>

  <div class="clear"></div>
</div>
<table class="table-list" border="0" cellspacing="0" cellpadding="0">
  <thead>
  <tr>
    <th>ID</th>
    <th>Username</th>
  </tr>
  </thead>
  <tbody>
  <tr>
    <td><%= @user.id %></td>
    <td><%= @user.username %></td>
  </tr>
  </tbody>
</table>


