<p id="notice"><%= notice %></p>
<% content_for :body_class, "questions" %>

<h1>Liste des utilisateurs</h1>
<div class="actions">
  <%= link_to 'Nouvel Utilisateur', new_user_path, class: "action-new-question" %>
  <div class="clear"></div>
</div>
<table class="table-list" border="0" cellspacing="0" cellpadding="0">
  <thead>
  <tr>
    <th>ID</th>
    <th>Username</th>
    <th colspan="3">Actions</th>
  </tr>
  </thead>
  <% if @users.any? %>
    <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.username %></td>
        <td class="td-action"><%= link_to 'Show', user %></td>
        <td class="td-action"><%= link_to 'Edit', edit_user_path(user) %></td>
        <td class="td-action"><%= link_to 'Destroy', user, method: :delete, data: {confirm: 'Are you sure?'} %></td>
      </tr>
    <% end %>
    </tbody>
  <% else %>
    <tr>
      <td colspan="3">Il n'y a aucun utilisateur</td>
    </tr>
  <% end %>
</table>

